<main>
    <h2>Editing <%= @project.title %></h2>
    <form action='/projects/<%= @project.id %>' method='post'>
        <input name='_method' type='hidden' value='patch'>
        <label>
            New Project Name:
            <input name='title' type='text' placeholder='<%= @project.title %>'>
        </label>
        <label>
            New Number of Volunteers Needed
            <input name='vols_needed' type='number' placeholder='<%= @project.vols_needed %>'>
        </label>
        <button class='btn' type='submit'>Update Project</button>
    </form>
    <form action='/projects/<%= @project.id %>' method='post'>
        <input name='_method' type='hidden' value='delete'>
        <button class='btn delete' type='submit'>DELETE PROJECT</button>
    </form>
    <a href='/projects/<%= @project.id %>'>Back to project page</a>
</main>
