<main>
    <h2><%= @project.title %></h2>
    <p><strong>Volunteers Assigned:</strong> <em><%= @project.vols_assigned %></em></p>
    <p><strong>Volunteers Needed:</strong> <em><%= @project.vols_needed %></em></p>

    <% if @project.volunteers.any? %>
    <ul>
        <% @project.volunteers.each do |vol| %>
        <li><a href='/projects/<%= @project.id %>/volunteers/<%= vol.id %>'><%= vol.name %></a></li>
        <% end %>
    </ul>
    <% end %>
    <hr>
    <form action='/projects/<%= @project.id %>' method="post">
        <h3>Add Volunteer:</h3>
        <label>
            Volunteer Name:
            <input required name='name' type='text'>
        </label>
        <button class='btn' type='submit'>Add Volunteer</button>
    </form>
    <hr>

    <a class='btn' href='/projects/<%= @project.id %>/edit'>Edit Project</a>
    <a href='/'>Back to main page</a>
</main>
